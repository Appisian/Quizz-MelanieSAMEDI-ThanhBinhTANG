<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.appisian.myapplication.MainActivity">

    <TextView
        android:id="@+id/numberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="#fff"
        android:textSize="80sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/numberView"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Start" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/buttonView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RadioButton
        android:text="AlÃ©atoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Default"
        android:layout_below="@+id/buttonView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/checkbox_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:layout_below="@+id/Default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <RadioButton
            android:id="@+id/checkbox_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Medium"
        android:layout_below="@+id/checkbox_easy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
            android:id="@+id/checkbox_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Hard"
        android:layout_below="@+id/checkbox_medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RadioGroup>

</RelativeLayout>

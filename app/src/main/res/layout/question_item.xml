<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_radius"
    android:minHeight="100dip"
    android:orientation="horizontal"
    android:paddingBottom="10px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="10px"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >


    <LinearLayout
        android:id="@+id/left"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/difficulty_image"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/easy" />

        <TextView
            android:id="@+id/difficulty_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="difficulty"
            android:textColor="#CDCDD0"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFEFEFF7" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:paddingLeft="10dp"

        >

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50px"
            android:text="quest_text"
            android:textColor="#000000"
            android:textSize="17dip"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/catergory_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="category"
            android:textColor="#a5AAAD" />
    </LinearLayout>


</LinearLayout>